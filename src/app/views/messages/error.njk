{% extends "model.njk" %}

{% block content %}
<div class="message error">
    <div class="lottie error"></div>

    <div class="information">
        <h3>Sentimos muito.</h3>

        <p>Não conseguimos completar esta operação, tente novamente mais tarde.</p>

        <button onclick="history.back()">Voltar</button>
    </div>
</div>
<script src="/lottie.min.js"></script>
<script>
const element = document.querySelector('div.lottie.error')

lottie.loadAnimation({
  container: element,
  renderer: 'svg',
  loop: false,
  autoplay: true,
  path: '/animations/12252-error.json'
})

</script>
{% endblock content %}