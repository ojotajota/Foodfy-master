{% extends "./model-session.njk" %}
{% import "parts/users-fields.njk" as users %}

{% block header %}
<div class="forgot-context">
    <h3>Esqueceu a Senha?</h3>
</div>
{% endblock header %}

{% block content %}
<section class="forgot container form">
    <form method="POST" action="/users/forgot-password" onsubmit="Validate.isInvalid(event)">
        
        <div class="fields">
            {% call users.render(user, error, 'Email para recuperar sua senha', '') %}

            {% endcall %}
        </div>

        <div class="footer">
            <ul>
                <li>
                    <button class="button" type="submit">Recuperar</button>
                </li>
            </ul>
        </div>
    </form>
</section>
{% endblock content %}